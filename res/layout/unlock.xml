<?xml version="1.0" encoding="utf-8"?>
<cn.edu.stu.TimeTrack.Layout.UnlockLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_unlock"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/unlocker_bg" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_unlock_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="60dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="60dip" />

            <TextView
                android:id="@+id/tv_unlock_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
               android:textColor="@color/yellow"
                android:textSize="60dip" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/unlock_time_bg2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip" >

            <TextView
                android:id="@+id/tv_unlock_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/yellow"/>

            <TextView
                android:id="@+id/tv_unlock_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textSize="20dp"
                android:layout_marginLeft="10dip"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dip" >

        <ImageView
            android:id="@+id/iv_unlock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/iv_unlock_locked"
            android:background="@drawable/unlocker_sleep" />

        <ImageView
            android:id="@+id/iv_unlock_locked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/unlocker" />

        <ImageView
            android:id="@+id/iv_unlock5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv_unlock_locked"
            android:background="@drawable/unlocker_none" />

        <ImageView
            android:id="@+id/iv_unlock2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_unlock_locked"
            android:layout_toLeftOf="@+id/iv_unlock_locked"
            android:background="@drawable/unlocker_entertm" />

        <ImageView
            android:id="@+id/iv_unlock3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_unlock_locked"
            android:layout_centerHorizontal="true"
            android:background="@drawable/unlocker_study" />

        <ImageView
            android:id="@+id/iv_unlock4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_unlock_locked"
            android:layout_toRightOf="@+id/iv_unlock_locked"
            android:background="@drawable/unlocker_work" />
    </RelativeLayout>

</cn.edu.stu.TimeTrack.Layout.UnlockLayout>